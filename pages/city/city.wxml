<!--pages/city/city.wxml-->
<cover-view class='page-top-position'>
  <cover-view style='height:{{pageTopHeight}}rpx; background-color: #e31c17;'></cover-view>
  <cover-view class="page-top center-style" style='position: relative'>
    <cover-view class='page-top-title'>北京</cover-view>
    <cover-view style='position: absolute;top: 0rpx;left: 0rpx;width:200rpx;height:100rpx;' bindtap='back'>
      <cover-image src='../../images/back.png' style='width:50rpx;height:40rpx;position: absolute;top: 30rpx;left: 45rpx;'></cover-image>
    </cover-view>
  </cover-view>
</cover-view>

<view style='height:{{allHeight}}rpx'></view>

<view class='buy-border flex-row' bindtap='jumpPayPage'>
  <view class='buy-font' style='font-size: 28rpx;color: #666666;line-height:100rpx; font-family: PingFang-SC-Regular;letter-spacing: 0.22px;'>29元解锁北京所有景点3个月</view>
  <view style='width:200rpx;height:70rpx;border-radius:35rpx;background:#e31c17;float:right;margin:15rpx 20rpx;' class='buy-font-button center-style'>立即购买</view>
</view>

<view style='position: relative;' bindtap='jumpCityMap'>
  <image src='http://twst.isart.me/o_1cfsgrrjinhlgm61gdfjsm1bqb9.png' style='width:750rpx;height:300rpx;'></image>
  <view style='width:188rpx;height:52rpx;background: rgba(0,0,0,0.45);border-radius:0 0 15px 0;position: absolute;top: 0rpx;left: 0rpx;' class='center-style'>
    <text class='scenicNum'>162</text>
    <text class='scenic-font'>处景点</text>
  </view>
</view>

<view style='margin:10rpx 25rpx;overflow:hidden;'>

  <block wx:for="{{8}}">
    <view style='width:50%;float:left;margin-top:20rpx;position: relative;'>

      <image src='http://twst.isart.me/o_1cfsgrrjinhlgm61gdfjsm1bqb9.png' style='width:320rpx;height:240rpx;margin:0rpx 15rpx;border-radius: 10rpx;'></image>
      <view style='font-size: 28rpx;text-align:center;'>故宫</view>
      <image src='../../images/explain.png' style='position: absolute;top: 20rpx;left: 0rpx;width:136rpx;height:48rpx;'></image>
      <view style='position: absolute;top: 32rpx;left: 15rpx;font-size:24rpx;color:#fff;'>15处介绍</view>
      <image src='../../images/play.png' style='position: absolute;top: 100rpx;left: 140rpx;width:60rpx;height:60rpx;'></image>
    </view>
  </block>

</view>